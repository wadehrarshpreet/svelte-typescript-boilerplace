{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "yarn pre-build && npm run build:tailwind && rollup -c",
    "pre-build": "yarn coverage && yarn check",
    "watch:tailwind": "postcss public/global-tailwind.css -o public/global.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss public/global-tailwind.css -o public/global.css",
    "dev": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\"",
    "start": "sirv public --no-clear --port 3000",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest --passWithNoTests",
    "coverage": "jest --passWithNoTests --coverage",
    "eslint-check": "eslint .",
    "prettier-check": "prettier --check --config .prettierrc.json .",
    "format": "prettier --write 'src/**/*.{css,html,js,ts,svelte}'",
    "lint": "eslint --fix --quiet src --ext .js,.svelte,.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/plugin-transform-modules-commonjs": "^7.18.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.1",
    "@tsconfig/svelte": "^2.0.0",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.7.1",
    "svelte-i18n": "^3.4.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0"
  },
  "engines": {
    "node": ">=16.10",
    "yarn": ">=1.22"
  }
}
